@using TotalBase.Enums;
@using TotalPortal.Configuration

@model TotalPortal.Areas.Purchases.ViewModels.LabViewModel

@using (Html.BeginForm(null, null, FormMethod.Post, new { id = "MainForm" }))
{
    @Html.AntiForgeryToken()

    @Html.Partial("~/Views/Helpers/Bases/_BaseSectionTop.cshtml")
    @Html.Partial("~/Views/Helpers/Bases/_BaseSectionLeft.cshtml")
    
    @Html.HiddenFor(model => model.LabID)
    @Html.HiddenFor(model => model.Hold)
    
    <div class="left-panel" style="height:30px;"></div>

    <div class="right-first-panel">

        <div class="form-group">
            @Html.LabelFor(model => model.Code)
            <div class="div-input">
                @Html.Kendo().MaskedTextBoxFor(model => model.Code).HtmlAttributes(new { @class = "left-panel-input", @readonly = "readonly" })
            </div>
            <div class="div-validation-message">
                @Html.ValidationMessageFor(model => model.Code, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <a style="color: #428bca; " href="@Url.Action("Edit", "MaterialArrivals", new { area = "Purchases", id = Model.GoodsArrivalID })" target="_blank"> Phiếu nhận hàng </a> 
            <div class="div-input">
                @Html.Kendo().MaskedTextBoxFor(model => model.GoodsArrivalReference).HtmlAttributes(new { @class = "left-panel-input", @readonly = "readonly" })
            </div>
            <div class="div-validation-message">
                @Html.ValidationMessageFor(model => model.GoodsArrivalReference, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.EntryDate)
            <div class="div-input">
                @Html.Kendo().DateTimePickerFor(model => model.EntryDate).HtmlAttributes(new { @class = "left-panel-input", @readonly = "readonly" })
            </div>
            <div class="div-validation-message">
                @Html.ValidationMessageFor(model => model.EntryDate, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="form-group SBT-Hidden">
            @Html.LabelFor(model => model.SealCodes)
            <div class="div-input">
                @Html.Kendo().MaskedTextBoxFor(model => model.SealCodes).HtmlAttributes(new { @class = "left-panel-input", @readonly = "readonly" })
            </div>
            <div class="div-validation-message">
                @Html.ValidationMessageFor(model => model.SealCodes, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.BatchCodes)
            <div class="div-input">
                @Html.Kendo().MaskedTextBoxFor(model => model.BatchCodes).HtmlAttributes(new { @class = "left-panel-input", @readonly = "readonly" })
            </div>
            <div class="div-validation-message">
                @Html.ValidationMessageFor(model => model.BatchCodes, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="form-group">
            @Html.LabelFor(model => model.CommodityCodes)
            <div class="div-input">
                @Html.Kendo().MaskedTextBoxFor(model => model.CommodityCodes).HtmlAttributes(new { @class = "left-panel-input", @readonly = "readonly" })
            </div>
            <div class="div-validation-message">
                @Html.ValidationMessageFor(model => model.CommodityCodes, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group SBT-Hidden">
            @Html.LabelFor(model => model.CommodityNames)
            <div class="div-input">
                @Html.Kendo().MaskedTextBoxFor(model => model.CommodityNames).HtmlAttributes(new { @class = "left-panel-input", @readonly = "readonly" })
            </div>
            <div class="div-validation-message">
                @Html.ValidationMessageFor(model => model.CommodityNames, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.TotalQuantity)
            <div class="div-input">
                @Html.Kendo().NumericTextBoxFor(model => model.TotalQuantity).HtmlAttributes(new { @class = "left-panel-input", @readonly = "readonly" })
            </div>
            <div class="div-validation-message">
                @Html.ValidationMessageFor(model => model.TotalQuantity, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="form-group SBT-Hidden">
            @Html.LabelFor(model => model.Remarks)
            <div class="div-input">
                @Html.Kendo().MaskedTextBoxFor(model => model.Remarks).HtmlAttributes(new { @class = "left-panel-input", @readonly = "readonly" })
            </div>
            <div class="div-validation-message">
                @Html.ValidationMessageFor(model => model.Remarks, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.CheckBoxFor(model => model.Approved, new { @disabled = "disabled" }) @Html.Label("PASS")
            @Html.CheckBoxFor(model => model.Hold, new { @style = "margin-left: 25px; margin-right: 3px; ", @disabled = "disabled" }) @Html.Label("Hold")
            @Html.CheckBoxFor(model => model.InActive, new { @style = "margin-left: 25px; margin-right: 3px; ", @disabled = "disabled" }) @Html.Label("Quarantine")
        </div>

        @if (@Model.Voidable || @Model.UnVoidable || @Model.VoidTypeID > 0)
        { //Don't render when in Edit Mode, so: do not add VoidType.VoidTypeID [Required] DataAnnotations to the view to submit to controller when edit
            <div class="form-group">
                @Html.EditorFor(d => d.VoidType, new { VoidTypeClassSpecialEditable = @Model.Voidable ? "SpecialEditable" : null, VoidTypeLabel = "Lý do quarantine" })
            </div>
        }
        
        @*<div class="left-panel-input">
            @if (Model.Editable)
            {
                <button type="submit" class="k-button custom-button SubmitTypeOption-Closed" formaction="@Url.Action("Edit", "Labs")"> <img src="~/Content/Images/New/save-32-m20.png" /> Lưu </button>
            }
        </div>*@

        @Html.Partial("~/Views/Helpers/Bases/_BaseSubmit.cshtml")

    </div>
    <div class="left-panel" style="height:30px;"></div>
    <div class="left-panel" style="height:30px;"></div>
    <div class="right-panel">


    </div>
}

