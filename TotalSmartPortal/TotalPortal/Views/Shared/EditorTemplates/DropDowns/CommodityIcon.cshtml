@model TotalPortal.Areas.Commons.ViewModels.Helpers.ICommodityIconDropDownViewModel

<div class="form-group">
    @Html.LabelFor(model => model.CommodityIconID)
    <div class="div-input">
        @Html.Kendo().DropDownListFor(m => m.CommodityIconID).BindTo(Model.CommodityIconSelectList).HtmlAttributes((ViewData["CommodityIconReadonly"] != null && (bool)ViewData["CommodityIconReadonly"] == true ? (object)new { @class = "left-panel-input", @readonly = "readonly" } : (object)new { @class = "left-panel-input" }))
    </div>
    <div class="div-validation-message">
        @Html.ValidationMessageFor(model => model.CommodityIconID, "", new { @class = "text-danger" })
    </div>
</div>

